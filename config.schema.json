{
  "pluginAlias": "Homebridge iRobot Platform",
  "pluginType": "platform",
  "singular": true,
  "customUi": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      }
    },
    "roombas": {
      "type": "array",
      "title": "Roomba's",
      "description": "Advanced settings for you Roomba's",
      "items": {
        "name": {
          "title": "Robot Name",
          "type": "string",
          "required": false,
          "placeholder": "Name To Display In Homekit"
        },
        "blid": {
          "title": "Blid",
          "type": "string",
          "required": true,
          "placeholder": "Your Roombas Blid/Username"
        },
        "password": {
          "title": "Password",
          "type": "string",
          "required": true,
          "placeholder": "Your Roombas Password"
        }
      }
    }
  }
}